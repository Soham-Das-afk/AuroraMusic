# AuroraMusic .env example
# Required
BOT_TOKEN=
ALLOWED_GUILD_IDS=123456789012345678,987654321098765432

# Optional: Spotify
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Optional: path to YouTube cookies (relative to repo root or absolute)
# Recommended default points to the example file included in source: `src/cookies/youtube.example.txt`
YOUTUBE_COOKIES=src/cookies/youtube.txt

# Owner contact shown when an unauthorized guild attempts to use the bot
OWNER_CONTACT=

# Proxy URL for YouTube requests (http://user:pass@host:port or http://host:port)
PROXY_URL=

# Display toggles
SHOW_BANNER=true
SHOW_CONTROLLER_THUMBNAIL=false

# Auto-restart (default enabled)
AUTO_RESTART_ENABLED=true
AUTO_RESTART_TIME=06:00
AUTO_RESTART_TZ_OFFSET_MINUTES=330

# This build is streaming-only: on-disk downloads and background caching are not used.

# Command sync and rate-limit protection
# Enable global command sync (use with care; can hit rate limits). Default: false
ENABLE_GLOBAL_COMMAND_SYNC=false
# Retries for command sync attempts
COMMAND_SYNC_RETRIES=3
# Exponential backoff base for command sync retries (delay = base ** attempt)
COMMAND_SYNC_BACKOFF_BASE=1.5
# Defer global syncs to an off-peak UTC window (default disabled)
GLOBAL_COMMAND_SYNC_OFFPEAK_ENABLED=false
# Off-peak window start and end hours (UTC). Example: 2 to 5
GLOBAL_COMMAND_SYNC_OFFPEAK_START_HOUR_UTC=2
GLOBAL_COMMAND_SYNC_OFFPEAK_END_HOUR_UTC=5
# When attempting repeated global syncs during the off-peak window, retry interval (seconds)
GLOBAL_COMMAND_SYNC_RETRY_INTERVAL_SECONDS=300
# Maximum attempts to perform a global sync during the off-peak window
GLOBAL_COMMAND_SYNC_MAX_ATTEMPTS_IN_WINDOW=6
